<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head.ejs') %>
<body>
	<!-- Header -->
	<%- include('partials/menu.ejs') %>
	
	<!-- Banner -->

<div class="banner">
		<img src="images/img-home-banner.jpg" alt="Banner de ofertas">
	</div>

	<!-- /Banner -->

	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-tittle">PROMOCIONES EN PRODUCTOS SELECCIONADOS </h2>
			</div>
				<!-- Show the "ultimos" products -->
				<% for(let i=0; i<productos.length; i++){ %> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						
						<a href="/product/<%=productos[i].id%>">
							<figure class="product-box_image">
								<img src=<%= productos[i].image%> alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<p class="new"> ¡NUEVO!</p>
								<h2><%= productos[i].product %> </h2>
								<p><%= productos[i].description %></p>
								<p>Comentarios:<%= comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% }%> 
		</div>
	</div>
	<!-- /Novedades -->
	<!-- Más comentados -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">MÁS COMENTADOS</h2>
			</div>
			<!-- Show the "ultimos" products -->
				<% for(let i=0; i<4; i++){ %> 
				<div class="col-12 col-sm-6 col-lg-3">
					<section class="product-box">
						<a href="/product">
							<figure class="product-box_image">
								<img src=<%= productos[i].image%> alt="cafetera moulinex">
							</figure>
							<article class="product-box_data">
								<h2><%= productos[i].product %> </h2>
								<p><%= productos[i].description %></p>
								<p>Comentarios:<%= comentarios.length %></p>
							</article>
						</a>
					</section>
				</div>
				<% }%>
		</div>
	</div>
	<!-- /Más comentados -->


	<!-- footer -->
	<%- include('partials/footer.ejs') %>
	<!-- /footer -->
</body>	
</html>