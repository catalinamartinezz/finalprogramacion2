<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head.ejs') %>

<body>
	<%- include('partials/menu.ejs') %>
	<!-- Datos del usuario -->
	<section class="info-usuario container products-wrapper">
		<div class="row">
			<div class="img-container offset-3 col-2">
				<img src="/images/users/<%= resultado.avatar %> " alt="foto de perfil" class="foto-perfil">
			</div>
			<div class="data-container col-6">
				<div class="d-flex align-items-center ">
					<h1 class="main-title"><%= resultado.username%> 
						<a href="/users/profileedit">
							<i class="fas fa-cog"></i>
						</a>
					</h1>
					<a class="btn mt-3 ml-4" href="">SEGUIR</a>
				</div>
				<div>
					<ul class="">
						<li><%= resultado.email%></li>
						<li><%= resultado.products.length%> productos</li>
						<li>200 seguidores</li>
						<li><%= resultado.comments.length%> comentarios</li>
					</ul>
				</div>
			</div>
		</div>
	</section>
	<!-- /Datos del usuario -->

	<!-- Mis productos -->
	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
				<h2 class="products-title">Mis productos</h2>
			</div>
			<!-- Show mis productos -->
			<% if(resultado.products.length != 0) {  %> 
				<% for(let i=0; i< resultado.products.length ; i++) { %>
					<div class="col-12 col-sm-6 col-lg-3">
						<section class="product-box">
							<a href="/products/product/<%= resultado.products[i].id_product %> ">
								<figure class="product-box_image">
									<img src= "/images/products/<%= resultado.products[i].avatar %> " alt="card">
								</figure>
								<article class="product-box_data">
									<h2> <%= resultado.products[i].name_product %>  </h2>
									<p> <%= resultado.products[i].description %>  </p>
									<p>Comentarios: <%= resultado.products[i].comments.length %> </p>
								</article>
							</a>
						</section>
					</div>
				<% } %> 
				<% }else { %>
					<div class="page">
						<p>Este usuario no subio ningun producto</p>
					</div>
				<% } %>
		</div>
	</div>
	<!-- /Mis productos -->


	<!-- footer -->
	<%- include('partials/footer.ejs') %>
	<!-- /footer -->
</body>	
</html>