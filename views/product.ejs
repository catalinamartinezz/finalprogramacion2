<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head.ejs') %>

<body>
	<!-- Header -->
	<%- include('partials/menu.ejs') %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-centerr">
			<h2 class="products-title"><%= productos[0].product %></h2> 
			<p class="product-detail-description">
				<a href="/product/productadd">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/fotoproducto.png" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= productos[0].description %>
					</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for(let i=0; i<comentarios.length; i++){ %> 
							<article>
								<img src=<%= comentarios[i].imagendelperfil%> alt="">
								<div class="data">
									<p class="user">
									<strong> <a href="/users/"><%= comentarios[i].nombredeusuario %> </a> </strong>
									<%= comentarios[i].textodelcomentario %></p>
								</div>
							</article>
							<% }%> 
					</section>
					<form class="form" action="/product" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer.ejs') %>
	<!-- /footer -->

</body>	
</html>