<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head.ejs') %>

<body>
	<!-- Header -->
	<%- include('partials/menu.ejs') %>

	<!-- product detail -->
	<div class="container products-wrapper">
		<div class="d-flex align-items-centerr">
			<h2 class="products-title"><%=products.product_name%></h2> 
			<p class="product-detail-description">
				<a href="/product/edit/<%= products.id_product%>">Editar</a>
			</p>
		</div>
		<div class="product-detail">
			<div class="row">
				<article class="col-12 col-lg-8 product-detail-info">
					<img src="/images/products/<%= products.image_product %>" alt="" class="product-detail-img">
					<p class="product-detail-description">
						<%= products.description %>
					</p>
				</article>
				<div class="col-12 col-lg-4">
					<section class="comments">
						<% for(let i=0; i<products.comments.length; i++){ %> 
							<article>
								<img class= "imagencirculo" src=<%= products.comments[i].users.avatar%> alt="">
								<div class="data">
									<p class="user">
									<strong> <a class="nombreusuario" href="/users/"><%= products.comments[i].users.username%> </a> </strong>
									<%= products.comments[i].comentario%>></p>
								</div>
							</article>
							<% }%> 
					</section>
					<form class="form" action="/product/product" method="GET">
						<input class="form-input" type="text" value="" placeholder="Agregar comentario">
						<button type="submit" class="buy-now-button">AGREGAR COMENTARIO</button>
					</form>
					<hr>
				</div>
			</div>
		</div>
	</div>
	<!-- /product detail -->

	<!-- footer -->
	<%- include('partials/footer.ejs') %>
	<!-- /footer -->

</body>	
</html>